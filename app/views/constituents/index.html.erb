<h1>Listing constituents</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Street</th>
    <th>Zipcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @constituents.each do |constituent| %>
  <tr>
    <td><%= constituent.first_name %></td>
    <td><%= constituent.last_name %></td>
    <td><%= constituent.email %></td>
    <td><%= constituent.street %></td>
    <td><%= constituent.zipcode %></td>
    <td><%= link_to 'Show', constituent %></td>
    <td><%= link_to 'Edit', edit_constituent_path(constituent) %></td>
    <td><%= link_to 'Destroy', constituent, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

